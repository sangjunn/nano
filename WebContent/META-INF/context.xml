		name="jdbc/xe"
		auth="Container"
		type="javax.sql.DataSource"
		driverClassName="oracle.jdbc.OracleDriver"
		url="jdbc:oracle:thin:@localhost:1521:xe"
		username="hr"
		password="a1234"
		maxActive="200"
		maxIdle="100"/>
</Context>

<!-- maxActive: 커넥션 풀이 제공하는 최대 커넥션 수 
